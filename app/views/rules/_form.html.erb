<% if @rule.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@rule.errors.count, "error") %> prohibited this rule from being saved:</h2>

    <ul>
    <% @rule.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_for @rule, :html => {:class => "form-horizontal"} do |f| %>
  You may optionally leave name and description blank and they will be automatically parsed out of the code
  <div class="form-group">
    <%= f.label :name, class: "control-label" %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "control-label" %><br>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :code, class: "control-label" %><br>
    <%= f.text_area :code, class: "form-control", rows: 10 %>
  </div>
  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-default btn-primary"  %>
    <%= f.button "Cancel", href: rule_path(@rule), class: "btn btn-default btn-default"  %>
  </div>
<% end %>